<!-- res/drawable/card_background_charlotte_hornets.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="#0D89A5"
            android:endColor="#000000"
            android:angle="0"/>
        </shape>
    </item>

    <item android:gravity="center">
        <bitmap
            android:src="@drawable/charlotte_hornets_logo"
            android:alpha="0.2"
            android:gravity="center"
            android:tileMode="disabled"
            android:scaleType="centerInside"/>
    </item>
</layer-list>
